<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="toolbarSpinnerStyle" format="reference"/>

    <style name="Base.Widget.MTS.Spinner.Toolbar" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Widget.MTS.Spinner.Toolbar" parent="Base.Widget.MTS.Spinner.Toolbar"/>

    <style name="ThemeOverlay.MTS.Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="TextAppearance.MTS.Spinner.Header" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="TextAppearance.MTS.Spinner.Dropdown" parent="TextAppearance.AppCompat.Menu"/>
</resources>